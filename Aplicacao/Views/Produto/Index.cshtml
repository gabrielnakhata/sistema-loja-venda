@{
    ViewData["title"] = "Produtos";
}
@model List<sistema_loja_venda.Entidades.Produto>;

<h2>Produtos
    </h2>
<hr />

<table class="table table-bordered">
    <thead>
        <tr style="background-color:#f6f6f6">
            <th>Código</th>
            <th>Descrição</th>
            <th>Qtde. Estoque</th>
            <th>Valor</th>
            <th>Categoria</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) // Para cada...
        {
            <tr onclick="Editar(@item.Codigo)" style="cursor:pointer;">
                <td>@item.Codigo</td>
                <td>@item.Descricao</td>
                <td>@item.Quantidade</td>
                <td>@item.Valor</td>
                <td>@item.Categoria.Descricao</td>
            </tr>
        }
    </tbody>
</table>
<br />

<button type="button" class="btn btn-block btn-primary" onclick="Cadastrar()">Cadastrar Produto</button>

<script>
    function Editar(Codigo) {
        window.location = window.origin + "\\Produto\\Cadastro\\" + Codigo;
    }
    function Cadastrar() {
        window.location = window.origin + "\\Produto\\Cadastro";
    }
</script>